<resources>

    <!-- Themes -->

    <style name="Theme.HackDash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="preferenceTheme">@style/HackDash.PreferenceThemeOverlay</item>
        <item name="android:listPreferredItemPaddingStart">?listPreferredItemPaddingLeft</item>
        <item name="android:listPreferredItemPaddingEnd">?listPreferredItemPaddingRight</item>
    </style>

    <style name="HackDash.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceStyle">@style/HackDash.Preference</item>
        <item name="preferenceCategoryStyle">@style/HackDash.Preference.Category</item>
        <item name="checkBoxPreferenceStyle">@style/HackDash.Preference.CheckBoxPreference</item>
        <item name="dialogPreferenceStyle">@style/HackDash.Preference.DialogPreference</item>
        <item name="preferenceScreenStyle">@style/HackDash.Preference</item>
    </style>

    <style name="HackDash.Preference" parent="">
        <item name="layout">@layout/preference_fix</item>
        <item name="android:layout">@layout/preference_fix</item>
    </style>

    <style name="HackDash.Preference.Category">
        <item name="layout">@layout/preference_category_fix</item>
        <item name="shouldDisableView">false</item>
        <item name="selectable">false</item>
        <item name="android:layout">@layout/preference_category_fix</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="HackDash.Preference.CheckBoxPreference">
        <item name="widgetLayout">@layout/preference_widget_checkbox_fix</item>
        <item name="android:widgetLayout">@layout/preference_widget_checkbox_fix</item>
    </style>

    <style name="HackDash.Preference.DialogPreference">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>
</resources>
